<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".CommanderActivity">

    <RelativeLayout
        android:id="@+id/P1Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/Player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="490dp"
            android:text="Player 1"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

        <Button
            android:id="@+id/toggle_gain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/Player"
            android:layout_alignTop="@+id/Player"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="-110dp"
            android:layout_marginTop="0dp"
            android:text="Life Gain" />

        <TextView
            android:id="@+id/HealthLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Player"
            android:layout_alignTop="@+id/Player"
            android:layout_below="@+id/Player"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="45dp"
            android:text="Health:40"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

        <Button
            android:id="@+id/health-1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/HealthLabel"
            android:layout_alignTop="@+id/HealthLabel"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="-45dp"
            android:layout_marginTop="0dp"
            android:text="-1" />

        <Button
            android:id="@+id/health-10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/HealthLabel"
            android:layout_alignTop="@+id/HealthLabel"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="-90dp"
            android:layout_marginTop="0dp"
            android:text="-10" />

        <TextView
            android:id="@+id/EnergyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/HealthLabel"
            android:layout_alignTop="@+id/HealthLabel"
            android:layout_below="@+id/HealthLabel"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="45dp"
            android:text="Energy:0"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

        <Button
            android:id="@+id/energy-1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/EnergyLabel"
            android:layout_alignTop="@+id/EnergyLabel"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="-55dp"
            android:layout_marginTop="0dp"
            android:text="-1" />

        <Button
            android:id="@+id/energy+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/EnergyLabel"
            android:layout_alignTop="@+id/EnergyLabel"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="-100dp"
            android:layout_marginTop="0dp"
            android:text="+1" />

        <TextView
            android:id="@+id/PoisonLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/EnergyLabel"
            android:layout_alignTop="@+id/EnergyLabel"
            android:layout_below="@+id/EnergyLabel"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="45dp"
            android:text="Poison:0"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

        <Button
            android:id="@+id/poison+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/PoisonLabel"
            android:layout_alignTop="@+id/PoisonLabel"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="-60dp"
            android:layout_marginTop="0dp"
            android:text="+1" />


    </RelativeLayout>

    <TextView
        android:id="@+id/CurrentTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CurrentPlayer"
        android:layout_centerHorizontal="true"
        android:text="Turn 1"
        android:textColor="@color/colorAccent"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/CurrentPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Player 1"
        android:textColor="@color/colorAccent"
        android:textSize="25sp" />

    <Button
        android:id="@+id/NextTurnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Next Turn" />
</RelativeLayout>